<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>映画のレビューを投稿</h2></h2>
        <%= form_with model:@movie, local:true do |f| %>
          <% if @movie.errors.any? %>
            <h3><%= @movie.errors.count %> 件のエラーにより保存できませんでした:</h3>
            <ul>
              <% @movie.errors.full_messages.each do |message| %>
              <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
          <div class="form-group">
            <%= f.label :title, "タイトル" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body, "レビュー" %>
            <%= f.text_area :body, class: "form-control-file" %>
          </div>
          <div class="form-group">
            <%= f.label :genre, "ジャンル" %>
            <%= f.select :genre, [["アクション", "アクション"], ["アドベンチャー", "アドベンチャー"], ["アニメ", "アニメ"], ["ファンタジー", "ファンタジー"], ["ミステリー", "ミステリー"], ["恋愛", "恋愛"], ["SF", "SF"]], include_blank: "選択して下さい" %>
          </div>
          <div class="form-group">
            <%= f.submit '投稿', class: "btn btn-success" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</main>