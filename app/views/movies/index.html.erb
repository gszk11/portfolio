<main>
  <div class='container px-5 px-sm-0'>
    <div class='row'>
      <%= render 'users/info', {user: @user} %>
      <div class="col-md-8 offset-md-1">
        <h2>映画一覧</h2>
        <table class="table">
          <thead>
            <tr>
              <th>タイトル</th>
              <th>レビュー</th>
              <th>ジャンル</th>
            </tr>
          </thead>
          <tbody>
            <% @movies.each do |movie| %>
            <tr>
              <td><%= link_to movie.title, movie_path(movie.id) %></td>
              <td><%= movie.body %></td>
              <td><%= movie.genre %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>